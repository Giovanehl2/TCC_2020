
@{
    ViewBag.Title = "GerarProva";
}

<h2>Gerar Prova</h2>
<br />

<div class="row">
    <div class="col-md-12">
        <form>
            <div class="form-row">
                <div class="form-group col-md-6">

                    <label for="TituloProva">Titulo da prova</label>
                    <input class="form-control" id="TituloProva" type="text">

                </div>

                <div class="form-group col-md-6">

                    <div class="row">
                        <div class="col-md-4"><label for="DataProva">Data da Prova</label></div>
                        <div class="col-md-4"><label for="DataProva">Hora - Inicio</label></div>
                        <div class="col-md-4"><label for="DataProva">Hora - Final</label></div>
                    </div>

                    <div class="row">
                        <div class="col-md-4"><input class="form-control" id="DataProva" type="date"></div>
                        <div class="col-md-4"><input class="form-control" id="HoraProvaInicio" type="time"></div>
                        <div class="col-md-4"><input class="form-control" id="HoraProvaFinal" type="time"></div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col">

                    <label for="NotaMax">Nota máxima</label>
                    <input class="form-control " id="NotaMax" type="number">

                </div>
                <div class="form-group col">

                    <label for="DisciplinaProva">Disciplina</label>
                    <select class="form-control" id="Disciplinas" name="Disciplinas">
                        <option>Selecione</option>
                        <option>Disciplina1</option>
                        <option>Disciplina2</option>
                    </select>

                </div>
                <div class="form-group col">

                    <label for="AssuntoProva">Assunto</label>
                    <select class="form-control" id="Assuntos" name="Assuntos">
                        <option>Selecione</option>
                        <option>Assunto1</option>
                        <option>Assunto2</option>
                    </select>

                </div>
                <div class="form-group col">
                    <label for="TurmaProva">Turma</label>
                    <select class="form-control" id="Turmas" name="Turmas">
                        <option>Selecione</option>
                        <option>Turma1</option>
                        <option>Turma2</option>
                    </select>
                </div>
            </div>
            <br />
            <br />
            <div class="form-row">

                <div class="form-group col-md-4">
                    <div class="row">
                        <div class="col">
                            <label class="form-check-label" for="gridCheck">
                                Tipo de questão
                            </label>

                        </div>
                        <div class="col">
                            <label class="form-check-label" for="gridCheck">
                                Quantidade
                            </label>
                        </div>
                    </div>
                    <br />


                    <div class="row">
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label" for="gridCheck">
                                    Simples escolha
                                </label>
                            </div>
                        </div>
                        <div class="col">
                            <input class="form-control" id="AssuntoProva" type="number">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label" for="gridCheck">
                                    Multipla escolha
                                </label>
                            </div>
                        </div>
                        <div class="col">
                            <input class="form-control" id="AssuntoProva" type="number">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label" for="gridCheck">
                                    Verdadeira ou falso
                                </label>
                            </div>
                        </div>
                        <div class="col">
                            <input class="form-control" id="AssuntoProva" type="number">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label" for="gridCheck">
                                    Dissertativa
                                </label>
                            </div>
                        </div>
                        <div class="col">
                            <input class="form-control" id="AssuntoProva" type="number">
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-6 offset-md-2">
                    <div class="row">
                        <div class="col">
                            <label class="form-check-label" for="gridCheck">
                                Configuração da faixa de correto/incorreto:
                            </label>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="row">
                        <div class="form-group col-md-3">
                            <label for="Incorreto">Incorreto</label>

                            <div class="row">
                                <div class="col-md-5">
                                    <input class="form-control" id="Incorreto1" type="number">
                                </div>
                                à
                                <div class="col-md-5">
                                    <input class="form-control" id="Incorreto2" type="number">
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-md-3">
                            <label for="Revisar">Revisar</label>

                            <div class="row">
                                <div class="col-md-5">
                                    <input class="form-control" id="Revisar1" type="number">
                                </div>
                                à
                                <div class="col-md-5">
                                    <input class="form-control" id="Revisar2" type="number">
                                </div>
                            </div>
                        </div>

                        <div class="form-group col-md-3">
                            <label for="Correto">Correto</label>

                            <div class="row">
                                <div class="col-md-5">
                                    <input class="form-control" id="Correto1" type="number">
                                </div>
                                à
                                <div class="col-md-5">
                                    <input class="form-control" id="Correto2" type="number">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class=form-row>


            </div>
        </form>
        <button class="btn btn-primary btn-sm" witdh="50" title="Criar" onclick="AdicionarQuestoesNaProva()">Criar</button>
    </div>
</div>

@* Modal com as questões que o professor pode revisar e trocar *@
<div class="modal fade" id="DivGerarProva">
    <div class="modal-dialog novep">
        <div class="modal-content">
            <div>
                <h2>Questão 1</h2>
                <div class="container">
                    <fieldset>
                        <div class="col-lg-10">
                            <div style="margin-left: 100px;">
                                <br />
                                <div class="">
                                    <h3>Questão: </h3>
                                    <textarea class="oitop" cols="30" rows="5" wrap="hard" name="DTquestao" id="DTquestao" placeholder="Pergunta numero 1 da prova"></textarea>
                                </div>
                            </div>
                            <br />
                            <div>
                                <div style="margin-left: 100px;" class="">
                                    <br />
                                    <h4>Resposta: </h4>
                                    <textarea class="oitop" cols="30" rows="5" wrap="hard" name="DTreposta" id="DTreposta" placeholder="Reposta do aluno"></textarea>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="col-lg-2">
                            <br />
                            <table class="tablep">
                                <tr>
                                    <th>Trocar</th>
                                    <th>Nota</th>
                                </tr>
                                <tr>
                                    <td><button witdh="50" title="Trocar Questão" class="btn btn-default btn-sm glyphicon glyphicon-refresh" onclick="TrocarQuestão()"></button></td>
                                    <td><input class="" type="text" name="ValorQuestao" value="" id="ValorQuestao" /></td>
                                </tr>
                            </table>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="col-lg-12">
                <h2>Questão 2</h2>
                <form method="post">
                    <fieldset>
                        <div class="col-lg-10">
                            <div style="margin-left: 100px;">
                                <br />
                                <div class="">
                                    <h3>Questão: </h3>
                                    <textarea class="oitop" cols="30" rows="5" wrap="hard" name="DTquestao" id="DTquestao"></textarea>
                                </div>
                            </div>
                            <br />
                            <div>
                                <div style="margin-left: 100px;" class="">
                                    <br />
                                    <h4>Resposta: </h4>
                                    <textarea class="oitop" cols="30" rows="5" wrap="hard" name="DTreposta" id="DTreposta"></textarea>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="col-lg-2">
                            <br />
                            <table class="tablep">
                                <tr>
                                    <th>Trocar</th>
                                    <th>Nota</th>
                                </tr>
                                <tr>
                                    <td><button witdh="50" title="Trocar Questão" class="btn btn-default btn-sm glyphicon glyphicon-refresh" onclick="TrocarQuestão()"></button></td>
                                    <td><input class="cincp" type="text" name="ValorQuestao" value="" id="ValorQuestao" /></td>
                                </tr>
                            </table>
                        </div>
                    </fieldset>
                </form>
            </div>
            <div>
                <label>&nbsp;</label>

                <button witdh="50" title="Salvar" class="btn btn-default btn-sm btn-diss btn-orange" onclick="SalvarProva()">Salvar Prova</button>
            </div>
        </div>
    </div>
</div>

